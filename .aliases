## -*-shell-script-*-

# Listing Folder Contents
alias ls='ls --color=auto --group-directories-first -N'
alias l='ls'
alias ll='ls -lvh'
alias lsm='ls -lvh'
alias lsl='ls -lrth'
alias lsc='ls -1 -vX'
alias lsa='ls -Avh'
alias lsd='ls -d */'
alias lsn='ls -v'
alias lsx='ls -lvXh'
alias lsq='ls --color=never'

# Viewing and/or Editing Files
alias less='less -M'
alias feh='feh -Z.'

# Pattern Searching
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Deleting, Moving, or Copying Files
alias rm='rm -i'
alias mv='mv -nv'
alias cp='cp -nv'
alias til='trash -d *~'

# Misc Aliases
alias x='exit'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'

# Git
alias gstat='git status'
alias gadd='git add'
alias gcom='git commit'
alias gpush='git push -u origin master'

# Turn screen off
alias off='bright --off'

# Fix Lenovo touchpad (click buttons above touchpad stop working sometimes)
alias touchpadfix='sudo modprobe -r psmouse; sleep 2; sudo modprobe psmouse'

# Change directory
cd()
{
    builtin cd "$@"
    [ $? -eq 0 ] && lsm
}

